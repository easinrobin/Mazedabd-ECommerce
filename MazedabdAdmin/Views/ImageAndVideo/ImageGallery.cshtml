@model MZ.Models.AdminViewModel
@{
    ViewBag.Title = "ImageGallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="content__title">
    <h1>Image Gallery</h1>
    <div class="actions">
        <a href="~/ImageAndVideo/InsertImage" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="~/ImageAndVideo/ImageGallery" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">
        <a href="~/ImageAndVideo/InsertImage" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Create New</a>

        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>Title</th>
                        <th>Image</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ImageGalleries)
                    {
                        var imgPath = "http://www.admin.mazeda-bd.com/" + item.ImagePath;
                        <tr>
                            <td>@Html.Raw(@item.ImageTitle)</td>
                            <td>
                                <img src="@imgPath" width="100" height="100" />
                            </td>
                            <td>
                                @Html.ActionLink(" ", "UpdateImage", new { Id = item.Id }, new { @class = "zmdi zmdi-edit", title = "Edit Item", data_toggle = "tooltip", data_placement = "top" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "DeleteImage", new { Id = item.Id }, new { @class = "zmdi zmdi-delete", title = "Delete Item", data_toggle = "tooltip", data_placement = "top", onclick = "return confirm('Are you sure you want to delete this item?')" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>