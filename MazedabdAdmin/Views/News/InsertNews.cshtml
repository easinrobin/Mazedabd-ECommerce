@using Vereyon.Web
@model MZ.Models.AdminViewModel
@{
    ViewBag.Title = "InsertNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
        <li class="breadcrumb-item"><a href="~/News/News">News List</a></li>
        <li class="breadcrumb-item active" aria-current="page">News</li>

    </ol>
</nav>

<header class="content__title">
    <h1>News</h1>
    <div class="actions">
        <a href="~/News/InsertNews" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card new-contact">
    @using (Html.BeginForm("InsertNews", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.RenderFlashMessages()
        @Html.HiddenFor(model => model.News.Id)
        @Html.HiddenFor(model => model.News.ImagePath)
        <div class="new-contact__header">

            @*@Html.TextBoxFor(model => model.Files, new { type = "file", id = "files", @class = "fa fa-camera new-contact__upload" })*@
            <input type="file" name="file" id="files" class="zmdi zmdi-camera new-contact__upload" />

            <img src="@Model.News.ImagePath" class="new-contact__img" alt="">
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Title</label>&nbsp;&nbsp;<span style="font-size: 18px; color: #1AD69C"><i class="zmdi zmdi-help-outline" title="Use <span class=&quot;colored&quot;> </span> for text coloring" data-toggle="tooltip" data-placement="top"></i></span>
                        @Html.TextBoxFor(model => model.News.Title, new { @class = "form-control", placeholder = "Give a Title" })
                        @Html.ValidationMessageFor(model => model.News.Title, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Short Description</label>&nbsp;&nbsp;<span style="font-size: 18px; color: #1AD69C"><i class="zmdi zmdi-help-outline" title="Use <span class=&quot;colored&quot;> </span> for text coloring" data-toggle="tooltip" data-placement="top"></i></span>
                        @Html.TextBoxFor(model => model.News.ShortDescription, new { @class = "form-control", placeholder = "Give a Short Description" })
                        @Html.ValidationMessageFor(model => model.News.ShortDescription, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.News.Description, new { @class = "card-body__title" })
                    @*@Html.TextAreaFor(model => model.Property.Description, new { @class = "form-control", rows = "3", placeHolder = "Description" })*@
                    <section id="editor" class="rich-text-box">
                        @Html.TextAreaFor(model => model.News.Description, new { @id = "wysiwyg-editor", placeHolder = "Description" })
                        @Html.ValidationMessageFor(model => model.News.Description, "", new { @class = "validation-text" })
                    </section>

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Video Path</label>&nbsp;&nbsp;<span style="font-size: 18px; color: #1AD69C"><i class="zmdi zmdi-help-outline" title="Use <span class=&quot;colored&quot;> </span> for text coloring" data-toggle="tooltip" data-placement="top"></i></span>
                        @Html.TextBoxFor(model => model.News.VideoPath, new { @class = "form-control", placeholder = "Give Video Link" })
                        @Html.ValidationMessageFor(model => model.News.VideoPath, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if (Model == null)
                    {
                        <input type="submit" value="Create" class="btn btn-light" />
                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn btn-light" />
                    }

                </div>
            </div>
        </div>
    }
</div>