@model MZ.Models.AdminViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="content__title">
    <h1>Seo list</h1>
    <div class="actions">
        <a href="~/Seo/Index" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">

        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>Page Name</th>
                        <th>Meta Tag</th>
                        <th>Meta Description</th>
                        <th>Canonical</th>
                        <th>Href Tag</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Seos)
                    {

                    <tr>
                        <td>@Html.Raw(@item.PageName)</td>
                        <td>@Html.Raw(@item.Metatag)</td>
                        <td>@Html.Raw(@item.MetaDesciption)</td>
                        <td>@Html.Raw(@item.Canonical)</td>
                        <td>@Html.Raw(@item.HrefTag)</td>

                        <td>
                            @Html.ActionLink(" ", "UpdateSeo", new { id = item.id }, new { @class = "zmdi zmdi-edit", title = "Edit Item", data_toggle = "tooltip", data_placement = "top" })&nbsp;&nbsp;
                            @*@Html.ActionLink(" ", "DeleteSeo", new { id = item.id }, new { @class = "zmdi zmdi-delete", title = "Delete Item", data_toggle = "tooltip", data_placement = "top", onclick = "return confirm('Are you sure you want to delete this item?')" })*@
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>