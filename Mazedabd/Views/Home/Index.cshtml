@model MZ.Models.PublicViewModel
@{
    ViewBag.Title = "Home";
    var imagePath = "http://twadmin.thebyteheart.com/" + Model.CompanySetting.ImgUrl;
}

<!-- section featured -->
<section id="featured">

    <!-- slideshow start here -->

    <div class="camera_wrap" id="camera-slide">
        @{
            var i = 1;
        }
        @foreach (var banner in Model.Banners.FindAll(x => x.IsActive == true).ToList())
        {
            string imagepath, sliderImage;
            //sliderImage = "http://twadmin.thebyteheart.com/" + banner.SliderBgImgUrl;
            sliderImage = banner.SliderBgImgUrl;
            if (banner.ImageUrl == null)
            {
                imagepath = null;
            }
            else
            {
                //imagepath = "http://twadmin.thebyteheart.com/" + banner.ImageUrl;
                imagepath = banner.ImageUrl;
            }

            if (i == 1)
            {
                <div data-src="@sliderImage">
                    <div class="camera_caption fadeFromLeft">
                        <div class="container">
                            <div class="row">
                                <div class="span12">
                                    <h2 class="animated fadeInDown">
                                        <strong>
                                            @Html.Raw(banner.Title)
                                        </strong>
                                    </h2>
                                    <p class="animated fadeInUp">
                                        @Html.Raw(banner.ShortDescription)
                                    </p>

                                </div>
                                @*<div class="span6" style="display: none">
                                        <img src="@imagepath" alt="" class="animated bounceInDown delay1" />
                                    </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (i == 2)
            {
                <div data-src="@sliderImage">
                    <div class="camera_caption fadeFromLeft">
                        <div class="container">
                            <div class="row">
                                @*<div class="span6" style="display: none">
                                        <img src="@imagepath" alt="" />
                                    </div>*@
                                <div class="span12">
                                    <h2 class="animated fadeInDown">
                                        <strong>
                                            @Html.Raw(banner.Title)
                                        </strong>
                                    </h2>
                                    <p class="animated fadeInUp">
                                        @Html.Raw(banner.ShortDescription)
                                    </p>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div data-src="@sliderImage">
                    <div class="camera_caption fadeFromLeft">
                        <div class="container">
                            <div class="row">

                                <div class="span12">
                                    <h2 class="animated fadeInDown">
                                        <strong>
                                            @Html.Raw(banner.Title)
                                        </strong>
                                    </h2>
                                    <p class="animated fadeInUp">
                                        @Html.Raw(banner.ShortDescription)
                                    </p>
                                </div>
                                @*<div class="span6" style="display: none">
                                        <img src="@imagepath" alt="" />
                                    </div>*@

                            </div>
                        </div>
                    </div>
                </div>
            }
            i++;
        }

    </div>

    <!-- slideshow end here -->

</section>
<!-- /section featured -->

