@model MZ.Models.PublicViewModel
@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imgPath = "http://www.admin.mazeda-bd.com/" + Model.AboutUs.ImageUrl;
}
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="inner-heading">
                    <ul class="breadcrumb">
                        <li><a href="/Home/">Home</a> <i class="icon-angle-right"></i></li>
                        <li class="active">About</li>
                    </ul>
                    <h2>About Us</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="description-bg">
    <div class="container">
        <div class="row">
            <div class="span12">
                <h4 class="white-text">@Html.Raw(Model.AboutUs.Title)</h4>
            </div>
            <div class="span8 white-text">
                @Html.Raw(Model.AboutUs.Description)
            </div>
            <div class="span4">
                
            </div>
        </div>
    </div>
</section>

<script>
    document.getElementById("description-bg").style.backgroundImage = "url('@imgPath')";
</script>