@{
    MZ.Models.CompanySetting companySetting = (MZ.Models.CompanySetting)Session["CompanySetting"];

    if (companySetting == null)
    {
        companySetting = MZ.BusinessLayer.CompanySettingsManager.GetCompanySettings(1);
        Session["CompanySetting"] = companySetting;
    }

    //var imagepath = "http://adminmzbd.thebyteheart.com/" + @companySetting.LogoUrl;
    var imagepath = companySetting.LogoUrl;
}
@model MZ.Models.PublicViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @companySetting.CompanyName | Vehicle lubricants & Fruits Supplier</title>
    <meta name="description" content="@ViewBag.Title - @companySetting.CompanyName | vehicle lubricants & Fruits Supplier" />
    <meta name="title" content="@ViewBag.Title - @companySetting.CompanyName | vehicle lubricants & Fruits Supplier">
    <link rel="icon" href="@Url.Content("~/twaicon.ico")" />

    <link href="https://fonts.googleapis.com/css?family=Handlee|Open+Sans:300,400,600,700,800" rel="stylesheet">
    <link href="~/Content/ThirdPartyCss/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/camera.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/slick.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/slick-theme.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/animate.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/jssocials.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/jssocials-theme-classic.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/baguetteBox.min.css" rel="stylesheet" />
    <script src="~/Scripts/ThirdPartyJs/modernizr.custom.js"></script>
    <link href="~/Content/ThirdPartyCss/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/CustomCss/style.css" rel="stylesheet" />
    <link href="~/Content/ThirdPartyCss/default.css" rel="stylesheet" />


</head>
<body>
    <div id="wrapper">
        <!-- start header -->
        <header>
            <div id="top-nav" class="top">
                <div class="container">
                    <div class="row inline-top">
                        <div class="span6">
                            <div class="src-area">
                                <p class="topcontact">
                                    @if (!string.IsNullOrEmpty(companySetting.MainContactNo))
                                    {
                                        <i class="icon-phone"></i><a href="tel:@Html.Raw(companySetting.MainContactNo)"> @Html.Raw(companySetting.MainContactNo)</a>
                                    }
                                    @if (!string.IsNullOrEmpty(companySetting.ContactNo))
                                    {
                                        <i class="icon-phone"></i><a href="tel:@Html.Raw(companySetting.ContactNo)"> @Html.Raw(companySetting.ContactNo)</a>
                                    }

                                </p>
                                <div class="search-container">
                                    @using (Html.BeginForm("SearchResult", "Home", FormMethod.Post))
                                    {
                                        <input name="searchKey" class="custom-search" id="searchleft" placeholder="Search">
                                        <label class="srcbutton searchbutton" for="searchleft"><span class="mglass">&#9906;</span></label>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="span6">

                            <ul class="social-network">
                                <li>
                                    <a href="@companySetting.FacebookPageUrl" data-placement="bottom" title="Facebook" target="_blank"><i class="icon-facebook icon-white fb"></i></a>
                                </li>
                                <li><a href="@companySetting.TwitterPageUrl" data-placement="bottom" title="Twitter" target="_blank"><i class="icon-twitter icon-white twitter"></i></a></li>
                                <li>
                                    <a href="@companySetting.YoutubePageUrl" data-placement="bottom" title="Youtube" target="_blank"><i class="icon-youtube-play icon-white yt"></i></a>
                                </li>
                                <li>
                                    <a href="@companySetting.GooglePlusPageUrl" data-placement="bottom" title="Google +" target="_blank"><i class="icon-google-plus icon-white gplus"></i></a>
                                </li>
                                <li>

                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>

            <div id="bottom-nav" class="header-area">
                <!-- site-navbar start -->
                <div class="navbar-area">
                    <div class="container">
                        <nav class="site-navbar">
                            <!-- site logo -->
                            <div class="logo">
                                <a href="/Home/">
                                    <img src="@imagepath" alt="MazedaBD" />
                                </a>
                            </div>
                            <!-- site menu/nav -->
                            <ul class="bottom-menu">
                                <li><a href="/Home/Index">Home </a></li>
                                <li><a href="/Home/About">About</a></li>
                                <li><a href="/Home/Products">Mazeda Mart</a></li>
                                <li><a href="/Home/News">News & Events</a></li>
                                <li><a href="/Home/Gallery">Media Center</a></li>
                                <li><a href="/Home/Contact">Contact</a></li>
                            </ul>

                            <!-- nav-toggler for mobile version only -->
                            <button class="nav-toggler">
                                <span></span>
                            </button>
                        </nav>
                    </div>
                </div><!-- navbar-area end -->
            </div>
        </header>
        <!-- end header -->

        @RenderBody()


        <footer class="top-footer">
            <div class="overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="span4">
                        <div class="widget">
                            <h5 class="widgetheading">Browse pages</h5>
                            <ul class="link-list">
                                <li><a href="/Home/Index">Home </a></li>
                                <li><a href="/Home/About">About</a></li>
                                <li><a href="/Home/Products">Products</a></li>
                                <li><a href="/Home/News">News & Events</a></li>
                                <li><a href="/Home/Gallery">Media Center</a></li>
                                <li><a href="/Home/Contact">Contact</a></li>
                            </ul>

                        </div>
                    </div>
                    <div class="span4">
                        <div class="widget">
                            <h5 class="widgetheading">Get in touch</h5>
                            <address>
                                <strong>@Html.Raw(companySetting.CompanyName)</strong><br>
                                @Html.Raw(companySetting.CompanyAddress)
                            </address>
                            <p>
                                @if (!string.IsNullOrEmpty(companySetting.MainContactNo))
                                {
                                    <i class="icon-phone"></i><a href="tel:@Html.Raw(companySetting.MainContactNo)"> @Html.Raw(companySetting.MainContactNo)</a><br>
                                }
                                @if (!string.IsNullOrEmpty(companySetting.ContactNo))
                                {
                                    <i class="icon-phone"></i><a href="tel:@Html.Raw(companySetting.ContactNo)"> @Html.Raw(companySetting.ContactNo)</a><br>
                                }
                                @if (!string.IsNullOrEmpty(companySetting.Email_1))
                                {
                                    <i class="icon-envelope-alt"></i><a href="mailto:@Html.Raw(companySetting.Email_1)"> @Html.Raw(companySetting.Email_1)</a><br>
                                }
                                @if (!string.IsNullOrEmpty(companySetting.Email_2))
                                {
                                    <i class="icon-envelope-alt"></i>
                                    <a href="mailto:@Html.Raw(companySetting.Email_1)"> @Html.Raw(companySetting.Email_2)</a>
                                }

                            </p>
                        </div>
                    </div>
                    <div class="span4">
                        <ul class="social-network-footer">
                            <li>
                                <a href="@companySetting.FacebookPageUrl" data-placement="bottom" title="Facebook" target="_blank"><i class="icon-facebook icon-white fb"></i></a>
                            </li>
                            <li>
                                <a href="@companySetting.TwitterPageUrl" data-placement="bottom" title="Twitter" target="_blank"><i class="icon-twitter icon-white twitter"></i></a>
                            </li>
                            <li>
                                <a href="@companySetting.YoutubePageUrl" data-placement="bottom" title="Youtube" target="_blank"><i class="icon-youtube-play icon-white yt"></i></a>
                            </li>
                            <li>
                                <a href="@companySetting.GooglePlusPageUrl" data-placement="bottom" title="Google +" target="_blank"><i class="icon-google-plus icon-white gplus"></i></a>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
            <div id="sub-footer">
                <div class="container">
                    <div class="row">
                        <div class="span6">
                            <div class="copyright">
                                <p><span>&copy; @Html.Raw(companySetting.CompanyName). All right reserved</span></p>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="credits">
                                <p>Made with <span style="color: red">❤️</span> By <a href="http://byteheart.com/" target="_blank">ByteHeart</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <a href="#" class="scrollup"><i class="icon-angle-up icon-square icon-bglight icon-2x active"></i></a>
    </div>

    <script src="~/Scripts/ThirdPartyJs/jquery.js"></script>
    <script src="~/Scripts/ThirdPartyJs/jssocials.min.js"></script>
    <script src="~/Scripts/ThirdPartyJs/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/ThirdPartyJs/bootstrap.min.js"></script>
    <script src="~/Scripts/ThirdPartyJs/modernizr.custom.js"></script>
    <script src="~/Scripts/ThirdPartyJs/camera/camera.js"></script>
    <script src="~/Scripts/ThirdPartyJs/camera/setting.js"></script>
    <script src="~/Scripts/ThirdPartyJs/animate.js"></script>
    <script src="~/Scripts/ThirdPartyJs/inview.js"></script>
    <script src="~/Scripts/ThirdPartyJs/client-slider.js"></script>
    <script src="~/Scripts/ThirdPartyJs/slick.min.js"></script>
    <script src="~/Scripts/ThirdPartyJs/baguetteBox.min.js"></script>
    <script src="~/Scripts/ThirdPartyJs/owl.carousel.min.js"></script>
    <script src="~/Scripts/ThirdPartyJs/jquery.validate.min.js"></script>
    <script src="~/Scripts/ThirdPartyJs/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/CustomJs/custom.js"></script>
    @RenderSection("scripts", required: false)
    <!--Start of Tawk.to Script-->
    <script type="text/javascript">
        var Tawk_API = Tawk_API || {}, Tawk_LoadStart = new Date();
        (function () {
            var s1 = document.createElement("script"), s0 = document.getElementsByTagName("script")[0];
            s1.async = true;
            s1.src = 'https://embed.tawk.to/5f508cbef0e7167d000d0ac1/default';
            s1.charset = 'UTF-8';
            s1.setAttribute('crossorigin', '*');
            s0.parentNode.insertBefore(s1, s0);
        })();
    </script>
    <!--End of Tawk.to Script-->
    <script>
        $("#share").jsSocials({
            shares: ["email", "twitter", "facebook", "messenger", "whatsapp"]
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.slider-inner').slick({
                slidesToShow: 5,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 1000,
                dots: true,
                arrows: false,
                responsive: [{
                    breakpoint: 768,
                    settings: {
                        arrows: false,
                        centerMode: true,
                        centerPadding: '40px',
                        slidesToShow: 3
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        arrows: false,
                        centerMode: true,
                        centerPadding: '40px',
                        slidesToShow: 1
                    }
                }
                ]
            });

        });

        $(function () {
            // this will get the full URL at the address bar
            var url = window.location.href;
            // passes on every "a" tag
            $(".bottom-menu a").each(function () {
                // checks if its the same on the address bar
                if (url == (this.href)) {
                    $(this).closest("li").addClass("active");
                }
            });
        });


    </script>
    <script>
        baguetteBox.run('.tz-gallery');
    </script>
    <script>
        window.onscroll = function () { myFunction() };

        var navbar = document.getElementById("bottom-nav");
        var sticky = navbar.offsetTop;

        function myFunction() {
            if (window.pageYOffset >= sticky) {
                navbar.classList.add("sticky");
            } else {
                navbar.classList.remove("sticky");
            }
        }
    </script>

    <script>
        $(window).on("load", function () {
            $(".loader-wrapper").fadeOut("slow");
        });
    </script>


</body>
</html>
